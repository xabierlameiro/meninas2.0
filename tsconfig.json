{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@*": ["./src/*"],
            "@components/*": ["./src/components/*"],
            "@layout/*": ["./src/components/Layout/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@queries/*": ["./src/queries/*"],
            "@schemes/*": ["./src/schemes/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/test/page.tsx"],
    "exclude": ["node_modules"]
}
